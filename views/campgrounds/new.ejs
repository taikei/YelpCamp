<%- include ("../partials/header") %>




<div class='container'>

    <div class='row text-center'>

        <h1>Create a New Campground</h1>
        <div style='width: 40%; margin: 40px auto;'>

            <form action='/campgrounds' method='POST'>

                <div class='form-group'>
                    <input class='form-control' type='text' placeholder='name' name='name'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='number' placeholder='price' name='price' min='0.01' step='0.01'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' placeholder='image url' name='image'>
                </div>
                <div class='form-group'>
                    <input class='form-control' type='text' placeholder='description' name='description'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-md btn-primary btn-block'>Submit!</button>
                </div>
                
            </form>

        </div>
        
    
        <a href='/campgrounds'>Go Back</a>


    </div>

   

</div>



